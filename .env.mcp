# MMTU Entertainment MCP Server Configuration Template
# Copy this file to .env.mcp and fill in your actual credentials

# ============================================================================
# PostHog Configuration
# ============================================================================
# Get your API key from: https://app.posthog.com/settings/project-details
POSTHOG_API_KEY=your_posthog_api_key_here
POSTHOG_HOST=https://app.posthog.com

# ============================================================================
# HubSpot Configuration  
# ============================================================================
# Create a private app at: https://app.hubspot.com/settings/integrations/private-apps
# Required scopes: contacts, companies, deals, tickets (read/write)
HUBSPOT_PRIVATE_APP_TOKEN=your_hubspot_private_app_token_here

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
# Format: postgresql://username:password@host:port/database
# Example: postgresql://mmtu_user:secure_password@localhost:5432/mmtu_analytics
POSTGRES_CONNECTION_STRING=postgresql://username:password@host:port/database

# ============================================================================
# Grafana Configuration
# ============================================================================
# Get API key from: Your Grafana instance > Configuration > API Keys
GRAFANA_URL=https://your-grafana-instance.com
GRAFANA_API_KEY=your_grafana_api_key_here

# ============================================================================
# Kubernetes Configuration (Optional)
# ============================================================================
# Path to your kubeconfig file (defaults to ~/.kube/config)
KUBECONFIG=~/.kube/config

# ============================================================================
# Docker Configuration (Optional)
# ============================================================================
# Docker daemon socket (defaults to unix:///var/run/docker.sock)
DOCKER_HOST=unix:///var/run/docker.sock

# ============================================================================
# Claude Desktop Integration (if using Claude Desktop)
# ============================================================================
# These settings will be automatically generated by setup script
CLAUDE_DESKTOP_CONFIG_PATH=~/.config/claude-desktop/claude_desktop_config.json

# ============================================================================
# Revenue Optimization Pipeline
# ============================================================================
# Enable/disable automated revenue monitoring
REVENUE_OPTIMIZATION_ENABLED=true
ALERT_EMAIL=your-email@example.com
SLACK_WEBHOOK_URL=your_slack_webhook_url_here