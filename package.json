{
  "name": "@mmtu/entertainment",
  "version": "1.0.0",
  "description": "MMTU Entertainment - Multi-product portfolio with monetization engine",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm run -r build",
    "dev": "pnpm run -r dev",
    "test": "pnpm run -r test",
    "test:schema": "vitest --run tests/schema --reporter=dot",
    "lint": "pnpm run -r lint",
    "typecheck": "pnpm run -r typecheck",
    "clean": "pnpm run -r clean",
    "test:e2e:site": "pnpm exec playwright test -c products/site/playwright.config.ts",
    "test:e2e:site:smoke": "pnpm exec playwright test -c products/site/playwright.smoke.ts --grep @smoke"
  },
  "devDependencies": {
    "@playwright/test": "1.54.2",
    "@types/node": "^20.0.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "playwright": "1.54.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vitest": "^2.1.8"
  },
  "pnpm": {
    "overrides": {
      "path-to-regexp": ">=6.3.0"
    }
  },
  "packageManager": "pnpm@8.15.0"
}